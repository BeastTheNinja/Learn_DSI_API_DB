generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role @default(USER)
  isActive Boolean @map("isactive")
  @@map("user")
}

model Car {
  id       Int     @id @default(autoincrement())

  categoryId Int
  brandId    Int
  model      String
  year       Int
  price      Decimal @db.Decimal(10, 2)
  fuelTypeId Int

  brand    Brand    @relation(fields: [brandId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])
  fuelType fuelType @relation(fields: [fuelTypeId], references: [id])

  @@map("cars")
}

model Brand {
  id    Int    @id @default(autoincrement())
  name  String 
  logo  String
  @@map("brands")

  cars  Car[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String 
  @@map("categories")

  cars Car[]
}

model fuelType {
  id   Int    @id @default(autoincrement())
  type String 
  @@map("fueltypes")

  cars Car[]
}